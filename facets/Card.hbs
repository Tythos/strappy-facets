<style>
    .Card {
        border: 1px solid #777;
        border-radius: 8px;
        font-family: sans-serif;
    }

    .CardImg {
        border-top-right-radius: 8px;
        border-top-left-radius: 8px;
    }

    .CardTitle {
        font-size: 1.8em;
        padding: 4px 8px;
    }

    .CardText {
        padding: 4px 8px;
    }

    .CardSomething {
        cursor: pointer;
        border-radius: 8px;
        height: 32px;
        color: #fff;
        border-width: 0px;
        box-shadow: 0px 0px 4px #000;
        font-size: 0.9em;
    }

    .Card button {
        margin: 4px 0px 8px 8px;
    }
</style>
<div class="Card" style="width:{{width}}px">
    {{#if img}}<img class="CardImg" src="{{img}}" style="width:{{width}}px"/>{{/if}}
    {{#if title}}<div class="CardTitle">{{title}}</div>{{/if}}
    {{#if text}}<div class="CardText">{{text}}</div>{{/if}}
</div>
