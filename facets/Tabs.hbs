<style>
    .Tabs {
        width: 512px;
        font-family: sans-serif;
    }

    .TabsSet {
        display: grid;
        grid-auto-flow: column;
        font-size: 1.1em;
    }

    .TabsTab {
        border-bottom: 1px solid #bbb;
        padding: 4px 8px;
    }

    .TabsTab:hover {
        cursor: pointer;
        color: #bbb;
    }

    .TabsTabCurrent {
        border-bottom-width: 0px;
        border-left: 1px solid #bbb;
        border-top: 1px solid #bbb;
        border-right: 1px solid #bbb;
        border-top-right-radius: 4px;
        border-top-left-radius: 4px;
    }

    .TabsTabCurrent:hover {
        cursor: default;
        color: inherit;
    }

    .TabsContent {
        font-size: 0.9em;
        display: none;
    }

    .TabsContentCurrent {
        display: block;
    }
</style>
<div class="Tabs">
    <div class="TabsSet">
        {{#each tabs}}
            <div class="
                TabsTab
                TabsTab{{@index}}
                {{#if @first}}TabsTabCurrent{{/if}}
            " >{{@key}}</div>
        {{/each}}
    </div>
    <div>
        {{#each tabs}}
            <div class="
                TabsContent
                TabsContent{{@index}}
                {{#if @first}}TabsContentCurrent{{/if}}
            ">{{this}}</div>
        {{/each}}
    </div>
</div>
